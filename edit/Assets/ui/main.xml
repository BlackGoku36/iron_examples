<?xml version="1.0" encoding="utf-8"?>
<vbox id="main">
    <style source="../css/dark.css" />

    <label text="Color" style="font-size:16px; color: #888888;" />
    <hslider id="colorR" width="200" pos="80" />
    <hslider id="colorG" width="200" pos="10" />
    <hslider id="colorB" width="200" pos="10" />

    <label text="Scale" style="font-size:16px; color: #888888;" />
    <hslider id="scaleX" width="200" pos="50" />
    <hslider id="scaleY" width="200" pos="50" />
    <hslider id="scaleZ" width="200" pos="50" />

    <label text="Normalize" style="font-size:16px; color: #888888;" />
    <hslider id="norm" width="200" pos="50" />
    <label text="Twist" style="font-size:16px; color: #888888;" />
    <hslider id="twist" width="200" pos="0" />
    
    <label text="Rotate" style="font-size:16px; color: #888888;" />
    <hbox>
        <checkbox id="rotX" text="X" />
        <checkbox id="rotY" text="Y" />
        <checkbox id="rotZ" text="Z" selected="true" />
    </hbox>

    <script>
        function resetClick() {
            colorR.pos = 80;
            colorG.pos = 10;
            colorB.pos = 10;
            scaleX.pos = 50;
            scaleY.pos = 50;
            scaleZ.pos = 50;
            norm.pos = 50;
            twist.pos = 0;
        }
        function randomClick() {
            colorR.pos = Std.random(100);
            colorG.pos = Std.random(100);
            colorB.pos = Std.random(100);
            scaleX.pos = Std.random(100);
            scaleY.pos = Std.random(100);
            scaleZ.pos = Std.random(100);
            norm.pos = Std.random(100);
            twist.pos = Std.random(100);
        }
    </script>

    <hbox style="padding-top:15px">
        <button id="resetButton" text="Reset" onClick="resetClick()" />
        <button id="randomButton" text="Randomize" onClick="randomClick()" />
    </hbox>
    
</vbox>
